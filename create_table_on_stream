CREATE TABLE customer_summary 
  WITH (
    KAFKA_TOPIC='dim_customer_table_topic',
    VALUE_FORMAT='AVRO'
  ) AS
  SELECT CUSTOMER_ID, 
         LATEST_BY_OFFSET(NAME) AS NAME,
         LATEST_BY_OFFSET(AGE) AS AGE,
         LATEST_BY_OFFSET(SALARY) AS SALARY
  FROM DIM_CUSTOMER_STREAM
  GROUP BY CUSTOMER_ID;
